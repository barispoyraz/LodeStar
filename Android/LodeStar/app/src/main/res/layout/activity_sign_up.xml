<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/thy_lounge_background">

    <TextView
        android:id="@+id/textSignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tableLayout2"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:text="@string/app_name_sign_up"
        android:textColor="@android:color/background_light"
        android:textSize="32sp" />

    <TableLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_sign_up"
        android:alpha="0.4"
        android:id="@+id/tableLayout2">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                app:srcCompat="@drawable/ic_003_user"
                android:scaleType="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/userName"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:maxLines="1"
                android:textColorHint="#7e7e7e"
                android:hint="@string/enter_username"
                android:maxLength="256"
                android:inputType="textEmailAddress"
                android:shadowColor="@color/colorWhite"
                android:textColor="@color/colorWhite" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/darker_gray" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                app:srcCompat="@drawable/ic_002_mail"
                android:scaleType="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/emailEdit"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColorHint="#7e7e7e"
                android:hint="@string/enter_e_mail"
                android:maxLength="100"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorWhite" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/darker_gray" />


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                app:srcCompat="@drawable/ic_001_key"
                android:scaleType="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp" />
            <EditText
                android:id="@+id/textPassword"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textColorHint="#7e7e7e"
                android:hint="@string/enter_password"
                android:maxLength="100"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColor="@color/colorWhite" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:background="@android:color/darker_gray" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                app:srcCompat="@drawable/ic_001_key"
                android:scaleType="center"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp" />
            <EditText
                android:id="@+id/reTypePassword"
                android:textColorHint="#7e7e7e"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:hint="@string/re_enter_password"
                android:maxLength="100"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textColor="@color/colorWhite" />
        </TableRow>



    </TableLayout>

    <TextView
        android:id="@+id/textPassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout2"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:text="Enter a combination of 8 characters containing \n uppercase and lowercase letters and a symbol    "
        android:textColor="#bebebe"
        android:textSize="12sp"
        android:alpha="0.9"
        android:layout_marginTop="5dp"/>


    <Button
        android:id="@+id/RegButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="#ba2d1d"
        android:onClick="signUpPlease"
        android:text="Sign Up!"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light" />

</RelativeLayout>





