<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.v7.widget.CardView
            android:id="@+id/place_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            card_view:cardCornerRadius="0dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/review_name_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_surname_dd_mm_yyyy" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/place_stars_image1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="3dp"
                        android:baselineAlignBottom="true"/>

                    <ImageView
                        android:id="@+id/place_stars_image2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="3dp"
                        android:baselineAlignBottom="true"/>

                    <ImageView
                        android:id="@+id/place_stars_image3"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="3dp"
                        android:baselineAlignBottom="true"/>

                    <ImageView
                        android:id="@+id/place_stars_image4"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="3dp"
                        android:baselineAlignBottom="true"/>

                    <ImageView
                        android:id="@+id/place_stars_image5"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="3dp"
                        android:baselineAlignBottom="true"/>

                    <TextView
                        android:id="@+id/place_number_of_reviews_expanded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                         />
                </LinearLayout>

                <TextView
                    android:id="@+id/review_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/review_name_surname"
                    android:layout_marginTop="3dp"
                    android:text="@string/review" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>