<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/thy_lounge_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lodestarapp.cs491.lodestar.SearchUserActivity">

    <ImageView
        android:id="@+id/kobeSearchImage"
        android:layout_width="70px"

        android:layout_height="70px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_003_user"></ImageView>


    <EditText
        android:id="@+id/kobeSearch"
        android:textColor="@color/colorWhite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/kobeSearchImage"
        android:layout_toRightOf="@+id/kobeSearchImage"
        android:hint=" Search Somebody!"
        android:textColorHint="@color/colorWhite">


        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/myListe"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/kobeSearch"></ListView>

    </RelativeLayout>
