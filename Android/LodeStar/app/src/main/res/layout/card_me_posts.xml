<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/me_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/me_profile_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/me_realName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="14dp"
                    android:layout_toLeftOf="@+id/me_username"
                    android:layout_toStartOf="@+id/me_username"
                    android:text="Jack Cracker"
                    android:textColor="#353535"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/me_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/me_realName"
                    android:layout_alignBottom="@+id/me_realName"
                    android:layout_marginEnd="89dp"
                    android:layout_marginRight="89dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/me_post_date"
                    android:layout_toStartOf="@+id/me_post_date"
                    android:text="crackerjack"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp" />

                <TextView
                    android:id="@+id/me_post_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/me_username"
                    android:layout_alignBottom="@+id/me_username"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="DD/MM/YY"
                    android:textColor="#353535"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/me_user_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/me_profile_picture"

                    android:layout_toRightOf="@id/me_profile_picture"
                    android:maxWidth="300dp"
                    android:text="I've definitely seen one of the most beautiful cities on Earth. With LodeStar, it was just like a walk in the park. That easy."
                    android:textColor="#353535"
                    android:textSize="12sp" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>