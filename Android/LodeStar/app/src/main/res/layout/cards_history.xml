<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/history_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="3dp"
            android:layout_marginBottom="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/history_from_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginBottom="5dp"
                    card_view:srcCompat="@android:color/holo_blue_light" />

                <TextView
                    android:id="@+id/history_from_city_country_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/history_from_imageview"
                    android:text="SHANGAI, CHINA" />

                <TextView
                    android:id="@+id/history_left_gate_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/history_from_city_country_textview"
                    android:text="LEFT FROM GATE 208" />

                <TextView
                    android:id="@+id/history_from_airport_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/history_left_gate_textview"
                    android:text="Shangai Pudong Int'l - PVG"/>

                <TextView
                    android:id="@+id/history_to_city_country_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/history_from_imageview"
                    android:text="ISTANBUL, TURKEY"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/history_to_terminal_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/history_to_city_country_textview"
                    android:text="ARRIVED TO TERMINAL 1"/>

                <TextView
                    android:id="@+id/history_to_airport_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/history_to_terminal_textview"
                    android:text="Istanbul Ataturk Int'l - IST"/>


                <TextView
                    android:id="@+id/history_from_time_in_CST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/history_from_airport_name_textview"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:text="11.50PM CST"
                    android:layout_marginStart="5dp" />

                <ImageView
                    android:id="@+id/imageview_init_pos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_name"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_below="@id/history_from_airport_name_textview"
                    android:layout_marginStart="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/imageview_init_pos"
                    android:layout_alignStart="@id/imageview_init_pos"
                    android:layout_below="@id/history_from_airport_name_textview"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="30dp"
                    android:text="---------------------------------------------------------------" />

                <TextView
                    android:id="@+id/history_from_time_in_GMT3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.50AM GMT+3"
                    android:layout_below="@id/imageview_init_pos"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp" />


                <TextView
                    android:id="@+id/history_to_time_in_CST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/history_to_airport_name_textview"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:text="10.30AM CST"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:id="@+id/imageview_final_pos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/history_to_airport_name_textview"/>

                <TextView
                    android:id="@+id/history_to_time_in_GMT3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="6.30PM GMT+3"
                    android:layout_below="@id/imageview_final_pos"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:id="@+id/history_to_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_below="@id/history_from_time_in_GMT3"
                    android:layout_marginTop="5dp"
                    card_view:srcCompat="@android:color/holo_green_dark" />!

            </RelativeLayout>



        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>